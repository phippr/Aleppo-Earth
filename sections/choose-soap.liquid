{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  #soap-grid {
    display: grid;
  }

  #soap-grid p,
  #soap-grid li {
    font: 400 16px / 1.5 Indivisible
    , Helvtica
    , Arial
    , sans-serif !important;
  }

  #soap-grid #block-1 {
    display: none;
    background-color: #ded2c6;
  }

  #soap-grid .col-label {
    border-right: 1px solid #ded2c6;
  }

  #soap-grid .grid-item {
    padding: 1.5rem 1rem;
  }

  #soap-grid .grid-item h4,
  #soap-grid .grid-item h4 {
    margin: 0;
  }

  #soap-grid .grid-item p,
  #soap-grid .grid-item ul {
    margin-top: 0;
  }

  #soap-grid .table-head {
    grid-column: span 2;
    background-color: #ded2c6;
    margin-top: 3rem;
    text-align: center;
  }

  #soap-grid #block-2 {
    margin-top: 0;
  }

  @media screen and (min-width: 1000px) {
    #soap-grid {
      grid-template-columns: auto repeat(4, 1fr);
    }

    #soap-grid #block-1 {
      display: block;
      order: 1;
    }

    #soap-grid .table-head {
      grid-column: span 1;
      margin: 0;
    }

    #soap-grid .secondary {
      display: none;
    }

    #soap-grid #block-2 {
      order: 2;
    }
    #soap-grid #block-3 {
      order: 3;
    }
    #soap-grid #block-4 {
      order: 4;
    }
    #soap-grid #block-5 {
      order: 5;
    }
    #soap-grid #block-6 {
      order: 6;
    }
    #soap-grid #block-7 {
      order: 7;
    }
    #soap-grid #block-8 {
      order: 8;
    }
    #soap-grid #block-9 {
      order: 9;
    }
    #soap-grid #block-10 {
      order: 10;
    }
    #soap-grid #block-11 {
      order: 11;
    }
    #soap-grid #block-12 {
      order: 12;
    }
    #soap-grid #block-13 {
      order: 13;
    }
    #soap-grid #block-14 {
      order: 14;
    }
    #soap-grid #block-15 {
      order: 15;
    }
    #soap-grid #block-16 {
      order: 16;
    }
    #soap-grid #block-17 {
      order: 17;
    }
    #soap-grid #block-18 {
      order: 18;
    }
    #soap-grid #block-19 {
      order: 19;
    }
    #soap-grid #block-20 {
      order: 20;
    }
  }
{%- endstyle -%}

<div class="page-width section-page-title section-{{ section.id }}-padding" style="background-color:{{ section.settings.background_colour }};">
